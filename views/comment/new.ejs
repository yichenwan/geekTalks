<% include ../partials/header %>
<form class="new-form" action="/geektalks/<%=talk.tag%>/<%=talk._id%>/comments/" method="POST">
	<h2>Add a comment to <%=talk.title%></h2>
	<div class="form-group">
		<label>Comment</label>
		<textarea class="form-control" name="comment[text]" rows="5" cols="33"></textarea>
	</div>
	<div class="form-group">
		<label>Author</label>
		<input class="form-control" name="comment[author]" placeholder="author">
	</div>	
	<button class="btn btn-primary">Submit</button>
</form>	

<% include ../partials/footer %>